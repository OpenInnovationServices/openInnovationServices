<script>
  function getRandomImgName() {
    var images = ['Fork', 'Brick', 'Ball', 'Clip'];
    var randomNumber = Math.floor(Math.random() * images.length);
    var img = document.getElementById("objImg")
    var objname = document.getElementById("objName")
    img.setAttribute("src","/reImagine/getImg/"+images[randomNumber])
    img.setAttribute("alt",images[randomNumber])
    if(images[randomNumber]== "Ball"){
      objname.innerHTML = "Table tennis/Ping-pong Ball";
    }else{
      objname.innerHTML = images[randomNumber];
    }
    
  }
</script>