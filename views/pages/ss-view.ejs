      <!-- <%= length <2 ? "style=display:none;" : '' %> -->
        <div class="container">
            <hr style="margin-top:0;">
  <%if (length < 1) { %>
  <h2>No Mix and Match solutions to display ..... <a href="/sustainableSolution">Go back to Sustainable Solution Challenges</a></h2>
  <% }else{ %>
  <table class="table table-bordered" id="ssViewTable">
    <thead>
      <th>Index</th>
      <th>Team Name</th>
      <th>Every Day Object</th>
      <th>Emerging Technology</th>
      <th>Solution Provided</th>
      <th>First Name</th>
      <th>School</th>
      <th>Delete</th>
    </thead>
    <% for(var i=0; i < data.length; i++) { %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= data[i].name %></td>
      <td><%= data[i].everyDayObject %></td>
      <td><%= data[i].techObject %></td>
      <td><%= data[i].solution %></td>
      <td><%= data[i].player %></td>
      <td><%= data[i].school %></td>
      <td>
        <form method="POST" action="/sustainableSolution/delete/id">
          <input type="hidden" value="<%= data[i]._id %>" name="id">
          <button type="submit"><i class="fas fa-trash"></i></button>
        </form>
      </td>
    </tr>
    <% } %>
  </table>
  <script>
    $(document).ready(function() {
      $('#ssViewTable').DataTable();
  } );
    </script>

  <% } %>
</div>